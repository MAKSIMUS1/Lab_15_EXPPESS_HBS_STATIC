<h1>Телефонный справочник</h1>
    <ul>
        {{#each phonebook}}
            <li>{{this.name}} - {{this.phone}}</li>
        {{/each}}
    </ul>
<form id="updateOrDeleteContactForm">
        <input type="text" name="name" value="{{itemToUpdate.name}}">
        <input type="text" name="phone" value="{{itemToUpdate.phone}}" >
    {{>update}}
    {{>delete}}
    {{>refuse}}
</form>